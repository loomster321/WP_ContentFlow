# Environment Configuration
NODE_ENV=development

# Cloud API Configuration
API_PORT=3001
API_HOST=0.0.0.0

# Database Configuration (PostgreSQL for Cloud API)
DB_HOST=postgres
DB_PORT=5432
DB_NAME=contentflow
DB_USER=contentflow
DB_PASSWORD=contentflow

# WordPress Database Configuration (MySQL)
WP_DB_HOST=mysql
WP_DB_NAME=wordpress
WP_DB_USER=wordpress
WP_DB_PASSWORD=wordpress

# Redis Configuration (Queue Management)
REDIS_URL=redis://redis:6379
REDIS_HOST=redis
REDIS_PORT=6379

# AI Provider API Keys
OPENAI_API_KEY=your_openai_api_key_here
ANTHROPIC_API_KEY=your_anthropic_api_key_here
GOOGLE_AI_API_KEY=your_google_ai_api_key_here

# JWT Configuration
JWT_SECRET=your_jwt_secret_here_minimum_32_characters
JWT_EXPIRES_IN=24h

# Application URLs
CLOUD_API_URL=http://localhost:3001
WORDPRESS_URL=http://localhost:8080
DASHBOARD_URL=http://localhost:3000

# Feature Flags
ENABLE_RATE_LIMITING=true
ENABLE_CACHING=true
ENABLE_LOGGING=true
ENABLE_METRICS=true

# Rate Limiting
RATE_LIMIT_REQUESTS_PER_MINUTE=60
RATE_LIMIT_REQUESTS_PER_HOUR=1000
RATE_LIMIT_DAILY_TOKEN_LIMIT=100000

# Cache Configuration
CACHE_TTL_AI_RESPONSES=1800
CACHE_TTL_WORKFLOWS=86400
CACHE_TTL_USER_PREFERENCES=3600

# Logging
LOG_LEVEL=info
LOG_FORMAT=json