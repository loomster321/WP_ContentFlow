{
    "name": "wp-content-flow/wp-content-flow",
    "description": "WordPress AI Content Flow Plugin - AI-powered content workflow plugin for WordPress",
    "type": "wordpress-plugin",
    "license": "GPL-2.0-or-later",
    "authors": [
        {
            "name": "WP Content Flow Team",
            "email": "team@wpcontentflow.com"
        }
    ],
    "minimum-stability": "stable",
    "require": {
        "php": ">=8.1",
        "composer/installers": "^2.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.6",
        "wp-coding-standards/wpcs": "^3.0",
        "phpcompatibility/phpcompatibility-wp": "^2.1",
        "dealerdirect/phpcodesniffer-composer-installer": "^1.0",
        "squizlabs/php_codesniffer": "^3.7",
        "phpstan/phpstan": "^1.10",
        "szepeviktor/phpstan-wordpress": "^1.3",
        "php-stubs/wordpress-stubs": "^6.4",
        "yoast/wp-test-utils": "^1.2",
        "brain/monkey": "^2.6"
    },
    "autoload": {
        "psr-4": {
            "WP_Content_Flow\\": "includes/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "WP_Content_Flow\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "phpcs": "phpcs --standard=WordPress --extensions=php --ignore=*/vendor/*,*/node_modules/* .",
        "phpcbf": "phpcbf --standard=WordPress --extensions=php --ignore=*/vendor/*,*/node_modules/* .",
        "phpstan": "phpstan analyse --memory-limit=512M",
        "test": "phpunit",
        "test-unit": "phpunit --testsuite=unit",
        "test-integration": "phpunit --testsuite=integration",
        "test-contract": "phpunit --testsuite=contract",
        "test-coverage": "phpunit --coverage-html coverage/",
        "lint": [
            "@phpcs",
            "@phpstan"
        ],
        "fix": "@phpcbf"
    },
    "config": {
        "allow-plugins": {
            "composer/installers": true,
            "dealerdirect/phpcodesniffer-composer-installer": true
        },
        "optimize-autoloader": true,
        "sort-packages": true
    },
    "extra": {
        "installer-name": "wp-content-flow"
    }
}