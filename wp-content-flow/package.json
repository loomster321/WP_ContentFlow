{
  "name": "wp-content-flow",
  "version": "1.0.0",
  "description": "WordPress AI Content Flow Plugin - AI-powered content workflow plugin for WordPress",
  "main": "assets/js/blocks.js",
  "scripts": {
    "build": "wp-scripts build",
    "build:dev": "wp-scripts build --mode=development",
    "start": "wp-scripts start",
    "test": "wp-scripts test-unit-js",
    "test:watch": "wp-scripts test-unit-js --watch",
    "test:coverage": "wp-scripts test-unit-js --coverage",
    "lint:js": "wp-scripts lint-js",
    "lint:css": "wp-scripts lint-style",
    "lint": "npm run lint:js && npm run lint:css",
    "format": "wp-scripts format",
    "check-engines": "wp-scripts check-engines",
    "check-licenses": "wp-scripts check-licenses"
  },
  "keywords": [
    "wordpress",
    "plugin",
    "gutenberg",
    "blocks",
    "ai",
    "content",
    "workflow",
    "openai",
    "claude",
    "automation"
  ],
  "author": "WP Content Flow Team",
  "license": "GPL-2.0-or-later",
  "devDependencies": {
    "@wordpress/scripts": "^27.0.0",
    "@wordpress/jest-preset-default": "^11.13.0",
    "@testing-library/jest-dom": "^6.1.0",
    "@testing-library/react": "^14.0.0",
    "@testing-library/user-event": "^14.5.0"
  },
  "dependencies": {
    "@wordpress/blocks": "^12.17.0",
    "@wordpress/block-editor": "^12.8.0",
    "@wordpress/components": "^25.6.0",
    "@wordpress/core-data": "^6.17.0",
    "@wordpress/data": "^9.10.0",
    "@wordpress/element": "^5.17.0",
    "@wordpress/i18n": "^4.40.0",
    "@wordpress/icons": "^9.31.0",
    "@wordpress/rich-text": "^6.17.0",
    "@wordpress/api-fetch": "^6.37.0",
    "@wordpress/url": "^3.41.0",
    "@wordpress/notices": "^4.8.0"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "browserslist": [
    "extends @wordpress/browserslist-config"
  ],
  "jest": {
    "preset": "@wordpress/jest-preset-default",
    "testEnvironment": "jsdom",
    "setupFilesAfterEnv": [
      "<rootDir>/tests/js/setup-tests.js"
    ],
    "testMatch": [
      "<rootDir>/tests/**/*.test.js",
      "<rootDir>/assets/**/*.test.js",
      "<rootDir>/blocks/**/*.test.js"
    ],
    "collectCoverageFrom": [
      "assets/**/*.js",
      "blocks/**/*.js",
      "!**/node_modules/**",
      "!**/vendor/**",
      "!**/build/**",
      "!**/*.min.js",
      "!**/test-utils/**"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 85,
        "lines": 85,
        "statements": 85
      },
      "assets/js/blocks.js": {
        "branches": 90,
        "functions": 90,
        "lines": 90,
        "statements": 90
      }
    },
    "coverageReporters": [
      "text",
      "lcov",
      "html",
      "json-summary"
    ],
    "testTimeout": 10000,
    "verbose": true,
    "moduleNameMapping": {
      "^@wordpress/(.*)$": "<rootDir>/node_modules/@wordpress/$1",
      "^@/(.*)$": "<rootDir>/$1"
    }
  },
  "wp-scripts": {
    "entry": {
      "blocks": "./assets/js/blocks.js",
      "editor": "./assets/js/editor.js",
      "frontend": "./assets/js/frontend.js"
    }
  }
}