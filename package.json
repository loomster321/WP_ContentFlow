{
  "name": "wp-content-flow",
  "version": "1.0.0",
  "description": "WordPress AI Content Workflow System with Multi-Agent Architecture",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "scripts": {
    "dev": "concurrently \"npm run dev:api\" \"npm run dev:dashboard\" \"npm run dev:plugin\"",
    "dev:api": "npm run dev --workspace=packages/cloud-api",
    "dev:dashboard": "npm run dev --workspace=packages/dashboard", 
    "dev:plugin": "npm run dev --workspace=packages/wordpress-plugin",
    "build": "npm run build --workspace=packages/cloud-api && npm run build --workspace=packages/dashboard && npm run build --workspace=packages/wordpress-plugin",
    "test": "npm run test --workspaces",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:debug": "playwright test --debug",
    "test:e2e:headed": "playwright test --headed",
    "test:smoke": "playwright test e2e/smoke-tests --reporter=list",
    "test:smoke:debug": "playwright test e2e/smoke-tests --debug --headed",
    "test:smoke:json": "playwright test e2e/smoke-tests --reporter=json",
    "test:pre-commit": "playwright test e2e/smoke-tests --reporter=line",
    "playwright:install": "playwright install",
    "test:unit": "jest",
    "test:unit:watch": "jest --watch",
    "test:unit:coverage": "jest --coverage",
    "lint": "npm run lint --workspaces",
    "clean": "npm run clean --workspaces && rm -rf node_modules",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:build": "docker-compose build"
  },
  "devDependencies": {
    "@playwright/test": "^1.41.0",
    "@types/node": "^20.10.0",
    "concurrently": "^8.2.2",
    "context7": "^1.0.0",
    "eslint": "^8.56.0",
    "jest": "^29.7.0",
    "lerna": "^8.0.0",
    "typescript": "^5.3.3"
  },
  "dependencies": {
    "axios": "^1.6.2"
  },
  "author": "WP Content Flow Team",
  "license": "GPL-2.0-or-later"
}