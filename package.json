{
  "name": "wp-content-flow",
  "version": "1.0.0",
  "description": "WordPress AI Content Workflow System with Multi-Agent Architecture",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "scripts": {
    "dev": "concurrently \"npm run dev:api\" \"npm run dev:dashboard\" \"npm run dev:plugin\"",
    "dev:api": "npm run dev --workspace=packages/cloud-api",
    "dev:dashboard": "npm run dev --workspace=packages/dashboard", 
    "dev:plugin": "npm run dev --workspace=packages/wordpress-plugin",
    "build": "npm run build --workspace=packages/cloud-api && npm run build --workspace=packages/dashboard && npm run build --workspace=packages/wordpress-plugin",
    "test": "npm run test:unit && npm run test:e2e:smoke",
    "test:unit": "jest",
    "test:unit:watch": "jest --watch",
    "test:unit:coverage": "jest --coverage",
    "test:e2e": "node e2e/test-runner.js full",
    "test:e2e:smoke": "node e2e/test-runner.js smoke",
    "test:e2e:admin": "node e2e/test-runner.js admin",
    "test:e2e:blocks": "node e2e/test-runner.js blocks",
    "test:e2e:workflows": "node e2e/test-runner.js workflows",
    "test:e2e:api": "node e2e/test-runner.js api",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:debug": "node e2e/test-runner.js smoke --debug",
    "test:e2e:headed": "node e2e/test-runner.js smoke --headed",
    "test:e2e:ci": "node e2e/test-runner.js full --env ci",
    "test:smoke": "node e2e/test-runner.js smoke --verbose",
    "test:smoke:debug": "node e2e/test-runner.js smoke --debug",
    "test:smoke:ci": "node e2e/test-runner.js smoke --env ci",
    "test:pre-commit": "node e2e/test-runner.js smoke",
    "test:all": "npm run test:unit && npm run test:e2e",
    "playwright:install": "playwright install",
    "playwright:install-deps": "playwright install-deps",
    "playwright:codegen": "playwright codegen http://localhost:8080",
    "lint": "npm run lint --workspaces",
    "lint:fix": "npm run lint:fix --workspaces",
    "clean": "npm run clean --workspaces && rm -rf node_modules test-results playwright-report",
    "clean:cache": "npm run clean && rm -rf .npm .cache",
    "docker:up": "docker compose up -d",
    "docker:down": "docker compose down",
    "docker:build": "docker compose build",
    "docker:logs": "docker compose logs -f wordpress",
    "docker:wp-cli": "docker compose exec wp-cli wp",
    "docker:mysql": "docker compose exec db mysql -u wordpress -p",
    "setup": "npm install && npm run playwright:install && npm run docker:up",
    "reset": "npm run docker:down && docker compose rm -f && npm run docker:up"
  },
  "devDependencies": {
    "@playwright/test": "^1.41.0",
    "@types/node": "^20.10.0",
    "concurrently": "^8.2.2",
    "context7": "^1.0.0",
    "eslint": "^8.56.0",
    "jest": "^29.7.0",
    "lerna": "^8.0.0",
    "typescript": "^5.3.3"
  },
  "dependencies": {
    "axios": "^1.6.2"
  },
  "author": "WP Content Flow Team",
  "license": "GPL-2.0-or-later"
}