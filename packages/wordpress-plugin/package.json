{
  "name": "@wp-content-flow/wordpress-plugin",
  "version": "1.0.0",
  "description": "WordPress plugin for AI content workflow integration",
  "scripts": {
    "dev": "webpack --mode development --watch",
    "build": "webpack --mode production",
    "clean": "rm -rf dist",
    "test": "wp-env run tests-cli --env-cwd=/var/www/html/wp-content/plugins/wp-content-flow wp phpunit",
    "lint:php": "phpcs --standard=WordPress .",
    "lint:js": "eslint assets/js/",
    "format:php": "phpcbf --standard=WordPress .",
    "format:js": "prettier --write assets/js/"
  },
  "devDependencies": {
    "@wordpress/scripts": "^26.19.0",
    "@wordpress/blocks": "^12.20.0",
    "@wordpress/components": "^25.8.0",
    "@wordpress/data": "^9.13.0",
    "@wordpress/edit-post": "^7.20.0",
    "@wordpress/editor": "^13.20.0",
    "@wordpress/element": "^5.20.0",
    "@wordpress/i18n": "^4.43.0",
    "@wordpress/plugins": "^6.11.0",
    "@wordpress/rich-text": "^6.20.0",
    "webpack": "^5.89.0",
    "webpack-cli": "^5.1.4",
    "@babel/core": "^7.23.6",
    "@babel/preset-env": "^7.23.6",
    "@babel/preset-react": "^7.23.3",
    "babel-loader": "^9.1.3",
    "css-loader": "^6.8.1",
    "sass-loader": "^13.3.2",
    "style-loader": "^3.3.3"
  },
  "dependencies": {
    "@wp-content-flow/shared-types": "file:../shared-types",
    "axios": "^1.6.2"
  },
