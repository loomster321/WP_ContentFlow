# Cloud API Environment Configuration
NODE_ENV=development
PORT=3001

# Database Configuration
DB_HOST=postgres
DB_PORT=5432
DB_NAME=contentflow
DB_USER=contentflow
DB_PASSWORD=contentflow

# Redis Configuration
REDIS_URL=redis://redis:6379

# AI Provider Configuration
OPENAI_API_KEY=your_openai_api_key_here
ANTHROPIC_API_KEY=your_anthropic_api_key_here
GOOGLE_AI_API_KEY=your_google_ai_api_key_here

# Security
JWT_SECRET=your_jwt_secret_here_minimum_32_characters
ENCRYPTION_KEY=your_encryption_key_here_minimum_32_characters

# WordPress Integration
WORDPRESS_BASE_URL=http://wordpress:80
WORDPRESS_API_ENDPOINT=/wp-json/wp-content-flow/v1

# Queue Configuration
QUEUE_CONCURRENCY=5
QUEUE_MAX_ATTEMPTS=3
QUEUE_RETRY_DELAY=30000

# Logging
LOG_LEVEL=info